
<h1>Categories</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to 'Show', category,class: "btn btn-primary"%></td>
        <% if current_user.role == "admin" %>
        <td><%= link_to 'Edit', edit_category_path(category),class: "btn btn-info" %></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-danger" %></td>
      </tr>
    <% end %>
    <%end %>
  </tbody>
</table>


<br>
 <% if current_user.role == "admin" %>
 <center>
 <a class="btn-hover color-signup" href="/categories/new" data-reactid="593">New Category</a>
     </center> </div>

<% end %>
