
<h4 class="order_header text-center">User Profile</h4><button class="btn-info "> <%= link_to 'Edit profile', edit_user_registration_path, :class => 'text-white' %></button><br><br>
<div class="container">
<table class="table table-hover border">
  <thead>
     <tr  style= "background-image: linear-gradient(to right, #f6d365 0%, #fda085 51%, #f6d365 100%);">
      <th>Name</th>
      <th>Email</th>
      <th>Gender</th>
      <th>Mobile no</th>
      <th>Address</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
       <tr>
        <td><%= current_user.name %></td>
        <td><%= current_user.email %></td>
        <td><%= current_user.gender_display %></td>
        <td><%= current_user.mobile_no %></td>
        <td><%= current_user.address %></td>
       
        <% end %>
        	<!-- <td><%#= image_tag current_user.image.url if current_user.image? %></td> -->
        
      </tr>
  </tbody>
</table>
</div>