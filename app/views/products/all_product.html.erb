<p id="notice"><%= notice %></p>

<h1 class="text-center">Products</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Image</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= image_tag(product.image_url, :size => "160x180") %></td>
        <td><%= product.category.name %></td>
        <td><%= link_to 'Show', product,:class => 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_product_path(product),:class => 'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
