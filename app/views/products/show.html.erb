<body>
<div class="container">
<div class="banner">
  <h1><%= @product.name%></h1>
  <div class='star-rating' data-score="<%= @avg_rating %>"></div>
                <strong><%= "#{@reviews.try(:size)} reviews" %></strong>
  <h2><%= @product.description%></h2>
  <h3>Price:₹<bold><%= @product.price%></bold>
    <s>₹<%= @product.full_price%></s></h3><br><br><br><br>
    <a class="btns" href="/products/<%= @product.id %>/cart"><span>Add to Cart</span></a>
    <a class="buy" href="/charges/new"><span>Buy Now</span></a>
    <% @reviews.each do |review|%>
    <div class='star-rating' data-score="<%= review.rating %>"></div><br>
        <%= review.review %>
        <h6><%= review.user.name %></h6><hr>
  <% end %>
</div>
 <div class="picture">
    <% if @product.image_url.present? %>
   <%= image_tag(@product.image_url, :size => "360x380") %>  
   <%else%>  
   <img src="https://i7.pngguru.com/preview/419/969/249/desktop-wallpaper-vegetable-basket-4k-resolution-8k-resolution-vegetable.jpg"> 
   <%end%>
   </div>
 </div>

