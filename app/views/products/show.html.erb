
  <div class="container">
    <div class="card">
      <div class="container-fliud">
        <div class="wrapper row">
          <div class="preview col-md-6">
            <div class="preview-pic tab-content">
              <div class="img-hover-zoom">
                <%= image_tag(@product.image_url, :size => "560x520") %>
                </div>
            </div>
            
          </div>
          <div class="details col-md-5">
            <br><br><br><br>
            <h3 class="product-title"><strong><%= @product.name %></strong></h3>
            <div class='star-rating' data-score="<%= @avg_rating %>"></div>
                <strong><%= "#{@reviews.try(:size)} reviews" %></strong>
            <!-- h3 class="product-title">men's shoes fashion</h3> -->
            <!-- <h3 class="product-title"><strong><%#= @product.name%></strong></h3> -->
            <p class="product-description"><%= @product.description%></p>
            <h4 class="price">
              ₹<bold><%= @product.price%></bold>
              <s>₹<%= @product.full_price%></s>
              </h4>
            <p class="vote"><strong>91%</strong> of buyers enjoyed this product! <strong>(87 votes)</strong></p>
        <!--     <h5 class="sizes">sizes:
              <span class="size" data-toggle="tooltip" title="small">s</span>
              <span class="size" data-toggle="tooltip" title="medium">m</span>
              <span class="size" data-toggle="tooltip" title="large">l</span>
              <span class="size" data-toggle="tooltip" title="xtra large">xl</span>
            </h5> -->
           <!--  <h5 class="colors">colors:
              <span class="color orange not-available" data-toggle="tooltip" title="Not In store"></span>
              <span class="color green"></span>
              <span class="color blue"></span>
            </h5> -->
           
            <div class="action">
              <li>
               <h6>
                <a class="btn btn--blue btn--stroke btn--stroke--2 px24 py12 txt-s round-full px36" href="/products/<%= @product.id %>/cart" data-reactid="593">Add to Cart</a>
                <a class="btn btn--red btn--stroked btn--stroke--2 px24 py12 txt-s round-full px37" href="/charges/new" data-reactid="593">Buy Now</a>

                </li>
      </div>
            
             <!--  <a href="/products/<%= @product.id %>/wishlist" data-tip="Add to Wishlist"><strong><i class="fa fa-shopping-cart"></strong></i></a></li> -->
              <br><br>
                
                <% if current_user.role == "admin" %>
        <td><%= link_to 'Edit', edit_product_path(@product),class: "btn btn--green btn--strokes btn--stroke--2 px24 py12 txt-s round-full px37" %></td>
        <% end %>
              <% @reviews.each do |review|%>
                <div class='star-rating' data-score="<%= review.rating %>"></div><br>
                <%= review.review %>
                <h6><%= review.user.name %></h6><hr>

              <% end %>
              <script type="text/javascript" src="app/assets/javascripts/jquery.raty.js"></script>
              <script type="text/javascript" src="http://code.jquery.com/jquery-1.10.2.js"></script>
               <script>
                    $('.star-rating').raty({
                      path: '/assets/',
                      readOnly: true,
                      score: function() {
                        return $(this).attr('data-score');
                      }
                    });
                  
                </script>
           </div>
          </div>
        </div>
      </div>
    </div>
  </div>
